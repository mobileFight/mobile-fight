{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": ["es6", "dom", "ES2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@mobileFight/ui/*": ["./src/ui/*"],
      "@assets/*": ["./src/assets/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "exclude": ["node_modules", "./src/serviceWorker.ts"]
}
